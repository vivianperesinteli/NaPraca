{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "@domain/*": ["./domain/*"],
      "@data/*": ["./data/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
